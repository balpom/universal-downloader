{
    "name": "balpom/universal-downloader",
    "description": "Downloads the contents of the specified URI (or file).",
    "type": "library",
    "homepage": "https://www.balpom.ru",
    "license": "MIT",
    "keywords": ["https", "http", "url", "uri", "file", "web", "site", "content", "download", "downloader", "client", "http-client", "https-client", "PSR18", "PSR-18"],
    "autoload": {
        "psr-4": {
            "Balpom\\UniversalDownloader\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Mikhail (Balpom)"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/http-message": "^2.0",
        "psr/http-factory": "^1.0",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "nyholm/psr7": "^1.7.0",
        "guzzlehttp/guzzle": "^7.8",
        "webclient/webclient": "^1.0"
    }
}
